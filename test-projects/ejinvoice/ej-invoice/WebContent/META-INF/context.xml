<?xml version="1.0" encoding="UTF-8"?>
<Context cookies="false">
    <!-- Specify a JDBC datasource -->
        <Resource name="jdbc/bizibo-prod" auth="Container"
            type="javax.sql.DataSource"
            username="bizibo" password="bizibo"
            driverClassName="com.mysql.jdbc.Driver"
            url="jdbc:mysql://localhost:3306/bizibo"
            maxActive="100" maxIdle="5"  minIdle="5" testWhileIdle="true"
            timeBetweenEvictionRunsMillis="60000" validationQuery="SELECT 1" />
</Context>
